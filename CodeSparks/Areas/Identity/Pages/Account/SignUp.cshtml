@page
@model CodeSparks.Areas.Identity.Pages.Account.SignUpModel
@{
    ViewData["Title"] = "Sign Up";
    Layout = null;
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/signup.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>

<body>
    <div id="particles-js"></div>

    <div class="panel" style="display: block; height: 500px;">
        <div class="p-3">
            <form method="post">
                <div class="mb-3">
                    <label for="username" class="signup-text">Username</label>
                    <input type="text" class="form-control signup-input" asp-for="Input.Username" required>
                    <span asp-validation-for="Input.Username" class="validation-issue"></span>
                </div>
                <div class="mb-3">
                    <label for="email" class="signup-text">Email</label>
                    <input type="text" class="form-control signup-input" asp-for="Input.Email" autofocus required>
                    <span asp-validation-for="Input.Email" class="validation-issue"></span>
                </div>
                <div class="mb-3">
                    <label for="password" class="signup-text">Password</label>
                    <input type="password" class="form-control signup-input" asp-for="Input.Password" required>
                    <span asp-validation-for="Input.Password" class="validation-issue"></span>
                </div>
                <div class="mb-3">
                    <label for="confirmPassword" class="signup-text">Confirm Password</label>
                    <input type="password" class="form-control signup-input" asp-for="Input.ConfirmPassword" required>
                    <span asp-validation-for="Input.ConfirmPassword" class="validation-issue"></span>
                </div>
                <div asp-validation-summary="ModelOnly" class="validation-issue" role="alert"></div>
                <div class="mt-3">
                    <button type="submit" class="btn-dark-custom">Begin the journey</button>
                </div>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js"></script>
    <script src="~/js/signup.js"></script>
</body>

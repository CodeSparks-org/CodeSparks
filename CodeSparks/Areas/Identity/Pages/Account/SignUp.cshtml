@page
@model CodeSparks.Areas.Identity.Pages.Account.SignUpModel
@{
    ViewData["Title"] = "Sign Up";
    Layout = null;
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/signup.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>

<body>
    <div id="particles-js"></div>

    <div class="panel" style="display: block; height: 500px;">
        <div class="p-3">
            @* <h4 class="spacefont">
                The journey begins
            </h4> *@

            <p>
                @if (!ModelState.IsValid)
                {
                    <span style="color: #ff9999; font-size: smaller;">
                        @foreach (var error in ModelState.Values)
                        {
                            @error.Errors[0].ErrorMessage <br />
                        }
                    </span>
                }
            </p>

            <form method="post">
                <div class="mb-3">
                    <label for="username" class="signup-text">Username</label>
                    <input type="text" class="form-control signup-input" id="username" name="username" value="@Model.Input.Username" required>
                    <span asp-validation-for="Input.Username" class="validation-issue"></span>
                </div>
                <div class="mb-3">
                    <label for="email" class="signup-text">Email</label>
                    <input type="text" class="form-control signup-input" id="email" name="email" autofocus required>
                </div>
                <div class="mb-3">
                    <label for="password" class="signup-text">Password</label>
                    <input type="password" class="form-control signup-input" id="password" name="password" required>
                    <span asp-validation-for="Input.Password" class="validation-issue"></span>
                </div>
                <div class="mb-3">
                    <label for="confirmPassword" class="signup-text">Confirm Password</label>
                    <input type="password" class="form-control signup-input" id="confirmPassword" name="confirmPassword" required>
                    <span asp-validation-for="Input.ConfirmPassword" class="validation-issue"></span>
                </div>
                <div class="mt-3">
                    <button type="submit" class="btn-dark-custom">Begin the journey</button>
                </div>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js"></script>
    <script src="~/js/signup.js"></script>
</body>

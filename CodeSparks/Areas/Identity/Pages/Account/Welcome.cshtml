@page
@model CodeSparks.Areas.Identity.Pages.Account.WelcomeModel
@{
    ViewData["Title"] = "Welcome";
    Layout = null;
}

<style>
    body {
        font-family: var(--fontStack-monospace, ui-monospace, SFMono-Regular, SF Mono, Menlo, Consolas, Liberation Mono, monospace) !important;
    }

    .signup-text-prompt {
        font-family: monospace; /* Monospace font for prompts */
    }

    .signup-input {
        background-color: #0d1117; /* Darker input background */
        color: #ffffff; /* White text */
    }

    canvas {
        display: block;
        vertical-align: bottom;
    }

    #particles-js {
        position: absolute;
        width: 100%;
        height: 100%;
        background-color: #2e0e33;
        background-image: url("");
        background-repeat: no-repeat;
        background-size: cover;
        background-position: 50% 50%;
    }

    .panel {
        font-size: 1.3em;
        position: absolute;
        z-index: 10;
        width: 400px;
        height: 220px;
        background-color: #24292f; /* Dark gray background */
        color: #c9d1d9; /* Light gray text */
        top: 50%;
        left: 50%;
        margin: -110px 0 0 -200px;
        padding: 5px;
        border-radius: 4px;
        box-sizing: border-box;
        z-index: 100;
    }
</style>

<div id="particles-js"></div>

<div class="panel" style="display: block;">
    <h3>
        Welcome to CodeSparks!
    </h3>
    <h5>
        Let’s begin the adventure
    </h5>
    <form>
        <div class="form-group">
            <label for="username" class="signup-text-prompt">Enter your username</label>
            <input type="text" class="form-control signup-input" id="username" required>
        </div>
        <button type="submit" class="btn btn-primary btn-block">Continue</button>
    </form>
</div>

<script src="https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js"></script>
<script>
    particlesJS("particles-js", {
        "particles": {
            "number": {
                "value": 80, "density":
                    { "enable": true, "value_area": 800 }
            }, "color": { "value": "#ffffff" },
            "shape": {
                "type": "star", "stroke": { "width": 0, "color": "#000000" },
                "polygon": { "nb_sides": 5 }, "image": { "src": "img/github.svg", "width": 100, "height": 100 }
            }, "opacity": {
                "value": 0.5, "random": false,
                "anim": { "enable": false, "speed": 1, "opacity_min": 0.1, "sync": false }
            }, "size": {
                "value": 3, "random": true,
                "anim": { "enable": false, "speed": 40, "size_min": 0.1, "sync": false }
            }, "line_linked": {
                "enable": false, "distance": 150,
                "color": "#ffffff", "opacity": 0.4, "width": 1
            }, "move": {
                "enable": true, "speed": 6, "direction": "none",
                "random": false, "straight": false, "out_mode": "out",
                "bounce": false, "attract": { "enable": false, "rotateX": 600, "rotateY": 1200 }
            }
        },
        "interactivity": {
            "detect_on": "canvas", "events":
            {
                "onhover": { "enable": true, "mode": "repulse" },
                "onclick": { "enable": true, "mode": "push" }, "resize": true
            }, "modes": {
                "grab": { "distance": 400, "line_linked": { "opacity": 1 } },
                "bubble": { "distance": 400, "size": 40, "duration": 2, "opacity": 8, "speed": 3 },
                "repulse": { "distance": 200, "duration": 0.4 }, "push": { "particles_nb": 4 },
                "remove": { "particles_nb": 2 }
            }
        }, "retina_detect": true
    });
</script>
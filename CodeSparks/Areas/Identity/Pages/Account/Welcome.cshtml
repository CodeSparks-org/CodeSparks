@page
@model CodeSparks.Areas.Identity.Pages.Account.WelcomeModel
@{
    ViewData["Title"] = "Welcome";
    Layout = null;
}

<head>
    <link rel="stylesheet" href="~/css/welcome.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>

<body>
    <div id="particles-js"></div>

    <div class="panel" style="display: block;">
        <div class="p-3">
            <h3>
                Welcome to CodeSparks!
            </h3>
            <h5 class="mb-3">
                Let’s begin the adventure
            </h5>

            <form class="mt-4">
                <div class="mb-3">
                    <label for="username" class="signup-text-prompt">Enter your username</label>
                    <input type="text" class="form-control signup-input" id="username" required>
                </div>
                <div class="mt-3">
                    <button type="submit" class="btn-dark-custom">Continue</button>
                </div>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js"></script>
    <script src="~/js/welcome.js"></script>

</body>
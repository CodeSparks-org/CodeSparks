@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "_LayoutFull";
}

<div id="particles-js"></div>

<div class="panel" style="display: block; height: 350px;max-width: 440px;">
    <div class="p-3">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="validation-issue" role="alert"></div>
            <div class="mb-3">
                <label for="username" class="signup-text">Username</label>
                <input type="text" class="signup-input-right" asp-for="Input.Username" required>
            </div>
            <div class="mb-3">
                <label for="email" class="signup-text">Email</label>
                <input type="text" asp-for="Input.Email" class="signup-input-right" />
            </div>
            <div class="mb-3">
                <label asp-for="Input.Password" class="signup-text">Password</label>
                <input asp-for="Input.Password" class="signup-input-right" autocomplete="new-password" />
            </div>
            <div class="mb-3">
                <label asp-for="Input.ConfirmPassword" class="signup-text">Confirmation</label>
                <input asp-for="Input.ConfirmPassword" class="signup-input-right"/>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn-dark-custom">Register</button>
        </form>
        <span asp-validation-for="Input.Username" class="validation-issue"></span>
        <span asp-validation-for="Input.Email" class="validation-issue"></span>
        <span asp-validation-for="Input.Password" class="validation-issue"></span>
        <span asp-validation-for="Input.ConfirmPassword" class="validation-issue"></span>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js"></script>
    <script src="~/js/signup.js"></script>
}

@section HeadStyles {
    <link rel="stylesheet" href="~/css/signup.css">
}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2>Create a New Spark</h2>
            <form>
                <div class="mb-3">
                    <label for="sparkName" class="form-label">Spark Name</label>
                    <input type="text" class="form-control" id="sparkName" name="sparkName" required>
                </div>
                <div class="mb-3">
                    <label for="sparkDescription" class="form-label">Spark Description</label>
                    <textarea class="form-control" id="sparkDescription" name="sparkDescription" rows="3"></textarea>
                </div>
                @* <div class="mb-3">
                    <label for="projectId" class="form-label">Project</label>
                    <select class="form-select" id="projectId" name="projectId">
                    </select>
                </div> *@
                <button type="submit" class="btn btn-primary">Create Spark</button>
            </form>
        </div>
    </div>
</div>

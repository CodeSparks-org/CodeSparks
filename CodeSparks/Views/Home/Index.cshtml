@{
    var sparks = new List<(string, string)>
    {
        new ("Add Sparks to database", "Make it possible to have a dynamic list of sparks"),
        new ("Flow to add new sparks", "Make it possible to add new tech sparks, so they can be tracked and implemented"),
        new ("Put sparks into practice", "Add ability to change status for tech sparks, which are done"),
    };
}

<div class="text-center">
    <h1 class="display-4">❇️🎆✨🎇✴️</h1>
</div>

<h4 class="mt-5">Flaming Sparks</h4>


<div class="row">
    @for (int i = 0; i < 3; i++) //hardcoded for now
    {
        var spark = sparks[i];
        var href = "https://github.com/CodeSparks-org/CodeSparks/issues/" + i + 1;
        <div class="col-md-3">
            <div class="card mt-2" style="width: 18rem;">
                @* <img class="card-img-top" src="..." alt="Card image cap"> *@
                <div class="card-body">
                    <h5 class="card-title">@spark.Item1</h5>
                    <p class="card-text">@spark.Item2</p>
                    <a href="@href" class="btn btn-primary">Details</a>
                </div>
            </div>
        </div>
    }
</div>

<a href="https://github.com/CodeSparks-org/CodeSparks/issues/" class="btn btn-success">＋ Ignite a new Spark *</a>


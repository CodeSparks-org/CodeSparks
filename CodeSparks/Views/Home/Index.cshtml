@using Microsoft.AspNetCore.Identity
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

@{
    string[] symbols = { "❇️", "🎆", "✨", "🎇", "✴️", "⭐", "🌠", "🌟" };
    Random random = new Random();
    int index = random.Next(symbols.Length);
    string randomSymbol = symbols[index];
}

<section class="hero-section container mt-1 text-center">
    <h3 class="display-4">Code Sparks  @randomSymbol</h3>
    <p class="lead text-muted">Learn, grow, and connect with a vibrant tech community.</p>
</section>

<div class="container my-5">
    <div class="row">
        <div class="col-md-6 mb-4">
            <section id="sparks" class="text-center">
                <h2>Start with a Spark</h2>
                <p>Sparks are small tasks or ideas that help you level up your skills through collaboration.</p>
                <a asp-controller="Sparks" asp-action="Index" class="btn btn-warning">Explore Sparks</a>
            </section>
        </div>
        <div class="col-md-6">
            <section id="explore-projects" class="text-center">
                <h2>Continue with Projects</h2>
                <p>Open-source projects designed to inspire and foster collaboration.</p>
                <a asp-controller="Projects" asp-action="Index" class="btn btn-primary">Explore Projects</a>
            </section>
        </div>
    </div>
</div>

<section class="features container my-5">
    <div class="row row-cols-1 row-cols-md-3 g-4">
        <div class="col">
            <div class="card h-100">
                <a asp-controller="Quests" asp-action="Index" class="stretched-link"> </a>
                <img src="~/img/quests_banner.jpg" class="card-img-top" alt="Coding Challenge Illustration">
                <div class="card-body">
                    <p class="card-text">Challenge yourself with exciting coding tasks in a fun and interactive environment.</p>
                    <div class="text-center">
                        <a asp-controller="Quests" asp-action="Index" class="btn btn-dark mt-2">
                            Participate in Engaging Quests  <i class="bi bi-trophy-fill"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card h-100">
                <a asp-controller="Skills" asp-action="Index" class="stretched-link"> </a>
                <img src="~/img/level_up_tech.jpg" class="card-img-top" alt="Badge Illustration">
                <div class="card-body">
                    <p class="card-text">Master new concepts and showcase your progress as you become a tech guru.</p>
                    <div class="text-center">
                        <a asp-controller="Skills" asp-action="Index" class="btn btn-dark mt-2">
                            Level-up Your Skills  <i class="bi bi-graph-up"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card h-100">
                <a asp-controller="Community" asp-action="Index" class="stretched-link"> </a>
                <img src="~/img/community.jpg" class="card-img-top" alt="Community Illustration">
                <div class="card-body">
                    <p class="card-text">Join a supportive community, share your experiences, and learn from others.</p>
                    <div class="text-center">
                        <a asp-controller="Community" asp-action="Index" class="btn btn-dark mt-2">
                            Connect with the Community  <i class="bi bi-people-fill"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="hero-section container mt-5 text-center">
    @if (!SignInManager.IsSignedIn(User))
    {
        <a asp-area="Identity" asp-controller="Account" asp-action="SignUpRequest" class="btn btn-primary btn-lg mt-3">Join Now</a>
    }
</div>

<section id="learn-more" class="text-center mt-5">
    <h2>Learn More</h2>
    <p>Where am I? What is this?
        <br />
        <a asp-controller="Home" asp-action="About">About Code Sparks</a>.</p>
</section>
</div>

<footer class="footer bg-dark text-white mt-5">
    <div class="container py-4 text-center">
        <p>&copy; @DateTime.Now.Year Code Sparks. All rights reserved.</p>
        <p>
            <a asp-controller="Home" asp-action="Privacy" class="text-white">Privacy Policy</a> |
            <a asp-controller="Home" asp-action="Terms" class="text-white">Terms of Service</a>
        </p>
        <div>
            <a href="#" class="text-white me-3"><i class="bi bi-facebook"></i></a>
            <a href="#" class="text-white me-3"><i class="bi bi-twitter"></i></a>
            <a href="https://github.com/CodeSparks-org/CodeSparks" class="text-white"><i class="bi bi-github"></i></a>
        </div>
    </div>
</footer>

    var sparks = new List<(string, string)>
    {
        new ("Fake: Add Sparks to database", "Make it possible to have a dynamic list of sparks"),
        new ("Fake: Add Sparks to database", "Make it possible to have a dynamic list of sparks"),
        new ("Fake: Flow to add new sparks", "Make it possible to add new tech sparks, so they can be tracked and implemented"),

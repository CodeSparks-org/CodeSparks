@model System.Collections.Generic.List<AppUser>

<section>
    <div class="container mt-4">
        <h2 class="mb-4">Code Sparks Community</h2>
        <p class="text-muted">Our community is full of passionate developers, learners, and innovators. Explore the profiles of our members, see their achievements, and get inspired by their progress.</p>

        <a href="/Join" class="btn btn-success mb-4">Join the Community</a>

        @if (Model == null || !Model.Any())
        {
            <div class="alert alert-warning">No users found. Be the first to join and make your mark!</div>
        }
        else
        {
            <div class="row">
                @foreach (var user in Model)
                {
                    <div class="col-md-4">
                        <div class="card mb-3 shadow-sm">
                            <div class="card-body">
                                <h5 class="card-title">@user.UserName</h5>
                                <p class="card-text"><strong>Level:</strong> @user.Level</p>
                                <p class="card-text"><strong>XP:</strong> @user.XP</p>
                                <a href="@Url.Page("/Profile", new { userName = user.UserName })" class="btn btn-outline-primary btn-block">View Profile</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</section>


<div class="row mt-5 ">
    <section class="call-to-action text-center py-5 bg-light col-md-4">
        <h2>Follow us on Github</h2>
        <p>We are currently under active development</p>
        <p>But you can stay tuned for updates and be among the first to experience the codesparks.org adventure!</p>
        <a href="https://github.com/CodeSparks-org/CodeSparks" target="_blank" class="btn btn-dark mt-3" role="button">
            Check out the <i class="bi bi-github"></i> repository
        </a>
    </section>

    <section class="call-to-action text-center py-5 bg-light col-md-4">
        <h2>Join the CodeSparks chat</h2>
        <p>Feel free to ask questions, request features and more.</p>
        <a href="https://t.me/codesparks" target="_blank" class="btn btn-primary mt-3" role="button">
            Join <i class="bi bi-telegram"></i> Telegram chat
        </a>
    </section>

    <section class="call-to-action text-center py-5 bg-light col-md-4">
        <h2>Suggest an idea</h2>
        <p>You can always suggest an idea by creating a special Spark ✨</p>
        <a asp-controller="Sparks" asp-action="Create" asp-route-category="@SparkCategory.Idea" class="btn btn-warning mt-3" role="button">
            Ignite the Idea Spark
        </a>
    </section>
</div>


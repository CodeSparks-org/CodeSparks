@using Microsoft.AspNetCore.Identity
@inject SignInManager<AppUser> SignInManager

@model List<Spark>
@{
    
}

<section class="container mt-3">
    <div class="row">
        <div class="col-md-3">
            <h2>✨ Sparks</h2>
            <a asp-controller="Sparks" asp-action="Create" class="btn btn-warning m-2">Ignite a new Spark</a>
        </div>
        <div class="col-md-9">
            <p class="lead text-muted">
                Sparks are the seeds of innovation in Code Sparks. They are the ideas, suggestions, and creative concepts.
                <br />
                A Spark is a small task or idea, that helps you to level-up your skills. It can be something to find, learn, or create.
                Good sparks are something that people can collaborate on, like: web article, tech problem, new technology.
            </p>
        </div>
    </div>
</section>
<hr />

<div class="row mb-3">
    @foreach (var spark in Model)
    {
        <div class="card-deck col-md-3">
            <div class="card mb-1">
                <a href="sparks/details/@spark.Id" class="stretched-link">  </a>
                @* <img class="card-img-top" src="..." alt="Card image cap"> *@
                <div class="card">
                    <div>
                        <div class="d-flex justify-content-center">
                            <i class="bi bi-star-fill text-warning"></i>
                            <i class="bi bi-star-fill text-warning"></i>
                            <i class="bi bi-star-fill text-warning"></i>
                            <i class="bi bi-star-fill text-warning"></i>
                            <i class="bi bi-star text-warning"></i>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <h5 class="card-title">@spark.Name</h5>
                    <p class="card-text">
                        @spark.Description
                    </p>
                </div>
                @* <div class="card-footer">
            <small class="text-muted">Last updated 3 mins ago</small>
            </div> *@
                <div class="card-footer">
                    <small class="text-muted">
                        @spark.Status, @spark.Category
                    </small>
                </div>
            </div>
        </div>
    }
</div>

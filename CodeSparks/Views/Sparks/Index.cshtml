@using Microsoft.AspNetCore.Identity
@inject SignInManager<AppUser> SignInManager

@model List<Spark>
@{
    
}
<p>
    A Spark is a small task or idea, that helps you to level-up your skills. It can be something to find, learn, or create.
    <br />
    Good sparks are something that people can discuss and collaborate on. For example: Analyze a tech article, Solve an interesting problem, Try a new technology.
</p>

@if (Model.Count > 0)
{
    <h2 class="mt-3">🎆 Active Sparks</h2>
}
<hr />
<div class="row mb-3">
    @foreach (var spark in Model)
    {
        <div class="card-deck col-md-3">
            <div class="card mb-1">
                <a href="sparks/details/@spark.Id" class="stretched-link">  </a>
                @* <img class="card-img-top" src="..." alt="Card image cap"> *@
                <div class="card">
                    <div>
                        <div class="d-flex justify-content-center">
                            <i class="bi bi-star-fill text-warning"></i>
                            <i class="bi bi-star-fill text-warning"></i>
                            <i class="bi bi-star-fill text-warning"></i>
                            <i class="bi bi-star-fill text-warning"></i>
                            <i class="bi bi-star text-warning"></i>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <h5 class="card-title">@spark.Name</h5>
                    <p class="card-text">
                        @spark.Description
                    </p>
                </div>
                @* <div class="card-footer">
            <small class="text-muted">Last updated 3 mins ago</small>
            </div> *@
                <div class="card-footer">
                    <small class="text-muted">
                        @spark.Status, @spark.Category
                    </small>
                </div>
            </div>
        </div>
    }
</div>

<p>You can also add your own spark!</p>
<a asp-controller="Sparks" asp-action="Create" class="btn btn-warning mb-4 mt-1"> + Add a Spark</a>